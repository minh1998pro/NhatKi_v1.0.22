<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/bg_show_add_nhatki">

    <TextView
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:text="@string/continue_use_account"/>

    <EditText
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/editUserPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Mật khẩu"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/btnChangeAccount"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="Tài khoản khác"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_cancel"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="Ok"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_ok"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
</LinearLayout>